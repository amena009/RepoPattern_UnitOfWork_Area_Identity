@page
@model BulkyRAZORWebApp.Pages.Categorie.IndexModel


   <div class="conatiner" >
       <div class="row pt-4 pb-3">
           <div class="col-6">
               <h2 class="text-dark">
                   Category List
               </h2>
           </div>
        <div class="col-6 text-end">
            <a asp-page="/Categorie/Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
       </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(a => a.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td class="w-75 btn-group" role="group">
                        <a asp-page="/categorie/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>

                         <a asp-page="/categorie/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>

                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>

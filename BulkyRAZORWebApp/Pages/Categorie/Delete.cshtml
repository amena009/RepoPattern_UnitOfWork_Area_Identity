@page
@model BulkyRAZORWebApp.Pages.Categorie.DeleteModel

<form method="post">
    <input asp-for="category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
        </div>

      

        <div class="mb-3 row p-1">
            @*<label class="p-0">Category Name</label>*@
            <label asp-for="category.Name" class="p-0"></label>
            <input asp-for="category.Name" disabled type="text" class="form-control" />
        </div>

        <div class="mb-3 row p-1">
            @*<label class="p-0">Display Order</label>*@
            <label asp-for="category.DisplayOrder" class="p-0"></label>
            <input asp-for="category.DisplayOrder" disabled type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-page="/Categorie/Index" class="btn btn-outline-secondary border form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>